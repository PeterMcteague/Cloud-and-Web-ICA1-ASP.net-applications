@model Task4Start.Models.StaffSkillVM

@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add skills for @Html.DisplayFor(m => m.staffCode) @Html.DisplayFor(m => m.fullName)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <hr />

    <div class="form-horizontal">

        @Html.HiddenFor(m => m.fullName)
        @Html.HiddenFor(m => m.skills)
        @Html.HiddenFor(m => m.staffCode)

        @*Dropdown of skills*@
        <div class="form-group">
            <label class="control-label col-md-2" for="buisnessUnitsList">Skill code</label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.selectedSkill, Model.items)
            </div>
        </div>

        @*Add button*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Skills", new { id = @Model.staffCode})
</div>
